<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "@color/background_material_dark">

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAppearance = "@android:style/TextAppearance.Material.Large.Inverse"
        android:text = "Fee Statement"
        android:id = "@+id/textView2"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:layout_margin = "16dp"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAppearance = "@android:style/TextAppearance.Material.Large.Inverse"
        android:text = "This Semester Fees: 9,000 RM"
        android:id = "@+id/textView11"
        android:layout_below = "@+id/textView14"
        android:layout_centerHorizontal = "true"
        android:layout_margin = "16dp"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAppearance = "@android:style/TextAppearance.Material.Large.Inverse"
        android:text = "Outstanding: 2,000 RM"
        android:id = "@+id/textView12"
        android:layout_below = "@+id/textView13"
        android:layout_centerHorizontal = "true"
        android:layout_margin = "16dp"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAppearance = "@android:style/TextAppearance.Material.Large.Inverse"
        android:text = "Total Paid: 7,000 RM"
        android:id = "@+id/textView13"
        android:layout_below = "@+id/textView11"
        android:layout_centerHorizontal = "true"
        android:layout_margin = "16dp"/>
    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Contact Bursary"
        android:id = "@+id/button_Contact"
        android:onClick="buttonContactCall"
        android:layout_marginTop = "16dp"
        android:layout_below = "@+id/textView12"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"/>
    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Apply for Loan"
        android:id = "@+id/button4"
        android:onClick="buttonApplyLoan"
        android:layout_alignTop = "@+id/button_Contact"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAppearance = "@android:style/TextAppearance.Material.Large.Inverse"
        android:text = "Student Status: Outstanding"
        android:id = "@+id/textView14"
        android:layout_below = "@+id/textView2"
        android:layout_centerHorizontal = "true"
        android:layout_margin = "16dp"/>
</RelativeLayout>
